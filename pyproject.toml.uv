[project]
name = "discord-bot-modern"
version = "2.0.0"
description = "Bot de Discord moderno con Python + Rust, métricas avanzadas y uv"
authors = [
    {name = "Ponce1969", email = "gompatri@gmail.com"}
]
readme = "README.md"
license = {text = "MIT"}
requires-python = ">=3.10"
keywords = ["discord", "bot", "python", "rust", "orangepi"]
classifiers = [
    "Development Status :: 4 - Beta",
    "Intended Audience :: Developers",
    "License :: OSI Approved :: MIT License",
    "Programming Language :: Python :: 3.10",
    "Programming Language :: Python :: 3.11",
    "Programming Language :: Python :: 3.12",
]

dependencies = [
    # Discord - Versión exacta que tienes
    "discord.py>=2.4.0",
    
    # Database
    "sqlalchemy>=2.0.31",
    "psycopg2-binary>=2.9.9",
    
    # Environment & Config
    "python-dotenv>=1.0.1",
    
    # Audio & Crypto
    "PyNaCl>=1.5.0",
    
    # HTTP & Async
    "aiohttp>=3.9.5",
    "aiosignal>=1.3.1",
    "async-timeout>=4.0.3",
    
    # Data Processing
    "pandas>=2.2.3",
    "dask[dataframe]>=2024.9.0",
    
    # AI & APIs
    "google-generativeai>=0.7.2",
    "groq>=0.9.0",
    "langchain-community>=0.2.11",
    "openai>=1.0.0",
    
    # Google APIs
    "google-api-python-client>=2.138.0",
    
    # Translation & Text
    "translate>=3.6.1",
    "fuzzywuzzy>=0.18.0",
    "python-levenshtein>=0.26.0",
    
    # Utilities
    "pytz>=2024.2",
    "table2ascii==1.1.3",
    "wcwidth==0.2.13", 
    "tabulate>=0.9.0",
    "Pillow>=10.4.0",
    
    # Low-level dependencies (las que ya tienes)
    "typing_extensions>=4.12.2",
    "yarl>=1.9.4",
    "pycparser>=2.22",
    "multidict>=6.0.5",
    "idna>=3.7",
    "greenlet>=3.0.3",
    "cffi>=1.16.0",
    "attrs>=23.2.0",
]

[project.optional-dependencies]
dev = [
    "pytest>=7.0.0",
    "pytest-asyncio>=0.21.0",
    # No necesitamos black, ruff, mypy - uv los tiene integrados
]

rust = [
    # Para cuando integremos el componente Rust
]

[project.urls]
Homepage = "https://github.com/Ponce1969/discord-bot-modern"
Repository = "https://github.com/Ponce1969/discord-bot-modern"
Issues = "https://github.com/Ponce1969/discord-bot-modern/issues"

[project.scripts]
bot = "pythonbot:main"

[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[tool.uv]
dev-dependencies = [
    "pytest>=7.0.0",
    "pytest-asyncio>=0.21.0",
    # uv tiene ruff y formatter integrados, no necesitamos instalarlos
]

# Configuración para uv fmt (reemplaza a black)
[tool.uv.fmt]
line-length = 88
target-version = "py310"
quote-style = "double"
indent-style = "space"
skip-magic-trailing-comma = false

# Configuración para uv check (reemplaza a ruff + mypy)
[tool.uv.check]
select = [
    "E",  # pycodestyle errors
    "W",  # pycodestyle warnings  
    "F",  # pyflakes
    "I",  # isort
    "B",  # flake8-bugbear
    "C4", # flake8-comprehensions
    "UP", # pyupgrade
    "N",  # pep8-naming
]
ignore = [
    "E501",  # line too long, handled by formatter
    "B008",  # do not perform function calls in argument defaults
    "C901",  # too complex
]
target-version = "py310"

# Configuración para type checking (uv integrado)
[tool.uv.type-check]
python-version = "3.10"
check-untyped-defs = true
disallow-any-generics = true
disallow-incomplete-defs = true
warn-redundant-casts = true
warn-unused-ignores = true

# Módulos externos sin tipos
[[tool.uv.type-check.overrides]]
module = [
    "discord.*",
    "groq.*", 
    "google.*",
    "translate.*",
]
ignore-missing-imports = true